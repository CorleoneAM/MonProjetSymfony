
{% extends 'base.html.twig' %}
{% block body %}
  <center><h1  style="color: Navy">Registration</h1></center>
  <div style="border-radius: 5px; background-color: #f2f2f2; padding: 20px; margin:0 10px 0 20px;">
{{ form_start(form) }}
{{ form_row( form.firstName) }}
{{ form_row( form.email) }}
